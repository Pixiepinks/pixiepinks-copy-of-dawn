{% layout 'theme' %}

{% assign featured_collection = collections['frontpage'] %}
{% if featured_collection == nil or featured_collection.products_count | default: 0 | plus: 0 == 0 %}
  {% assign featured_collection = collections['all'] %}
{% endif %}
{% assign featured_collection_count = 0 %}
{% if featured_collection %}
  {% assign featured_collection_count = featured_collection.products_count | default: 0 | plus: 0 %}
{% endif %}

<section class="page-width section">
  <div class="rich-text">
    <h1 class="rich-text__heading">{{ shop.name }}</h1>
    <div class="rich-text__text">
      <p>Browse our latest products.</p>
    </div>
  </div>

  <style>
    .homepage-products {
      margin-top: 2rem;
    }

    .products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 1.5rem;
    }

    .product-card {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      background: #fff;
      border: 1px solid rgba(0, 0, 0, 0.06);
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.04);
      height: 100%;
    }

    .product-card__media {
      position: relative;
      padding-top: 100%;
      overflow: hidden;
      background: #fafafa;
    }

    .product-card__media img {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .product-card__content {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      padding: 1rem 1.25rem 1.25rem;
      flex: 1;
    }

    .product-card__title {
      font-size: 1rem;
      line-height: 1.4;
      color: #111;
      font-weight: 600;
    }

    .product-card__price {
      display: flex;
      gap: 0.5rem;
      align-items: baseline;
      color: #111;
      font-weight: 700;
    }

    .product-card__price del {
      color: #8a8a8a;
      font-weight: 500;
    }

    .product-card__actions {
      display: grid;
      gap: 0.5rem;
      margin-top: auto;
    }

    .product-card__cta {
      display: inline-flex;
      width: 100%;
      justify-content: center;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1rem;
      background: #111;
      color: #fff;
      border-radius: 10px;
      text-decoration: none;
      border: none;
      cursor: pointer;
      transition: transform 120ms ease, box-shadow 120ms ease;
    }

    .product-card__cta:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 18px rgba(0, 0, 0, 0.08);
    }

    .product-card__cta--loading {
      opacity: 0.7;
      cursor: progress;
    }

    .products-empty {
      margin-top: 1.5rem;
      color: #555;
    }

    .product-card__cta[disabled] {
      background: #9e9e9e;
      cursor: not-allowed;
      box-shadow: none;
      transform: none;
    }

    .product-card__message {
      font-size: 0.9rem;
      color: #0b735e;
      line-height: 1.4;
      min-height: 1.2em;
    }

    .product-card__message--error {
      color: #b42318;
    }

    .product-card__message a {
      color: #0b735e;
      text-decoration: underline;
    }
  </style>

  <div class="homepage-products">
    {% if featured_collection and featured_collection_count > 0 %}
      {% paginate featured_collection.products by 12 %}
        <div class="products-grid" role="list">
          {% for product in featured_collection.products %}
            <article class="product-card" role="listitem">
              {% assign featured_variant = product.selected_or_first_available_variant %}
              <div class="product-card__media">
                {% if product.featured_media %}
                  <img
                    src="{{ product.featured_media | image_url: width: 700 }}"
                    alt="{{ product.featured_media.alt | escape | default: product.title }}"
                    loading="lazy"
                  >
                {% else %}
                  <div class="product-card__placeholder"></div>
                {% endif %}
              </div>

              <div class="product-card__content">
                <h2 class="product-card__title">{{ product.title }}</h2>
                <div class="product-card__price">
                  <span>{{ product.price | money }}</span>
                  {% if product.compare_at_price_max > product.price %}
                    <del>{{ product.compare_at_price_max | money }}</del>
                  {% endif %}
                </div>
                <div class="product-card__actions">
                  {% if featured_variant and featured_variant.available %}
                    <form method="post" action="/cart/add" class="product-card__form" data-variant-id="{{ featured_variant.id }}">
                      <input type="hidden" name="id" value="{{ featured_variant.id }}">
                      <button class="product-card__cta" type="submit" aria-label="Add {{ product.title }} to cart">
                        Add to cart
                      </button>
                    </form>
                    <p class="product-card__message" role="status" aria-live="polite"></p>
                  {% else %}
                    <button class="product-card__cta" type="button" disabled aria-label="{{ product.title }} is sold out">
                      Sold out
                    </button>
                  {% endif %}
                </div>
              </div>
            </article>
          {% endfor %}
        </div>
        {{ paginate | default_pagination }}
      {% endpaginate %}
    {% else %}
      <p class="products-empty">No products available yet. Add products to your catalog to see them here.</p>
    {% endif %}
  </div>
</section>

<script>
  (function () {
    const forms = document.querySelectorAll('.product-card__form');
    if (!forms.length) return;

    forms.forEach((form) => {
      const submitButton = form.querySelector('.product-card__cta');
      const status = form.parentElement.querySelector('.product-card__message');
      const defaultText = submitButton ? submitButton.textContent.trim() : 'Add to cart';

      form.addEventListener('submit', async (event) => {
        event.preventDefault();
        if (!submitButton) return;

        const variantId = form.dataset.variantId;
        if (!variantId) return;

        submitButton.disabled = true;
        submitButton.classList.add('product-card__cta--loading');
        submitButton.textContent = 'Adding...';

        if (status) {
          status.textContent = 'Adding to cart...';
          status.classList.remove('product-card__message--error');
        }

        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              Accept: 'application/json',
            },
            body: JSON.stringify({ id: Number(variantId), quantity: 1 }),
          });

          if (!response.ok) {
            const errorData = await response.json().catch(() => ({}));
            throw new Error(errorData.description || 'Unable to add this item to your cart right now.');
          }

          if (status) {
            status.innerHTML = 'Added to cart! <a href="/checkout">Go to checkout</a>';
            status.classList.remove('product-card__message--error');
          }
        } catch (error) {
          if (status) {
            status.textContent = error.message;
            status.classList.add('product-card__message--error');
          }
        } finally {
          submitButton.disabled = false;
          submitButton.classList.remove('product-card__cta--loading');
          submitButton.textContent = defaultText;
        }
      });
    });
  })();
</script>
